{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "author": "wvovaw",
  "main": "index.js",
  "scripts": {
    "build": "tsup-node src",
    "dev": "NODE_ENV=development tsnd --respawn --transpile-only --exit-child src/app.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint . --fix --cache",
    "prisma:dev": "dotenv -e .env.development prisma",
    "prisma:prod": "dotenv -e .env.production prisma",
    "start": "NODE_ENV=production node dist/app.js",
    "typecheck": "tsc -b --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/env": "^5.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "close-with-grace": "1.2.0",
    "fastify": "^5.0.0",
    "fastify-zod": "^1.4.0",
    "json-schema-to-ts": "^3.1.1",
    "node-cache": "^5.1.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@prisma/client": "^5.21.1",
    "@trivago/prettier-plugin-sort-imports": "4.1.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.17.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "sort-package-json": "2.5.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "template": "TomDoesTech/fastify-prisma-rest-api, MIT"
}
